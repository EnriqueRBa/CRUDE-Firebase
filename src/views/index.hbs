<div class="col-md-6 offset-md-3">
    <div class=""card bg-dark text-light>
        <div class="card-header">
            <h1 class="h4 text-white">
                Contacts List
            </h1>
        </div>
        <div class=""card-body>
            {{#if contacts}}
                <ul class="list-group">
                    {{#each contacts}}
                        <li class="List-group-item
                                   d-flex
                                   justifly-content-between
                                   aling-items-center
                                   ">
                            <div class="2mu-auto">
                                <h3 class="h6">
                                    {{firstname}} {{lastname}}
                                </h3>
                                <p>{{emaill}}</p>
                            </div>
                            <div>
                                <a href="/delete-contact/{{id}}" class="btn btn-danger">
                                    Delete
                                </a>
                            </div>
                            <div>
                                <a href="/edit-contact/{{id}}" class="btn btn-warning">
                                    Edit
                                </a>
                            </div>
                        </li>
                    {{/each}}
                </ul>
            {{else}}
                <p class="fs-4 text-center">
                    Not contacts yet.
                </p>
            {{/if}}
        </div>
        <div class="card-footer">
            <form action="{{#unless contact.id}}/new-contact{{else}}/update-contact/{{contact.id}}{{/unless}}" method="post">
                <div class="row">
                    <div class="col">
                        <label for="firstname">First Name: </label>
                        <input type="text"
                                name="firstname"
                                placeholder="Firstname"
                                class="form-control mb-3"
                                value="{{contact.firstname}}"
                                autofocus
                        />
                    </div>
                    <div class="col">
                        <label for="lasstname">First Name: </label>
                        <input type="text"
                                name="lasstname"
                                placeholder="Lasstname"
                                class="form-control mb-3"
                                value="{{contact.lasstname}}"
                        />
                    </div>
                </div>            
            </form>
        </div>
    </div>
</div>